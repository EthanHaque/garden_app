# Your full MongoDB connection string.
# Example for a local MongoDB instance with a user/password.
DATABASE_URL="mongodb://username:password@localhost:27017/your_database_name?authSource=admin"

# These are the secret keys for signing JSON Web Tokens. They must be long,
# random, and kept private. Use two different keys.
#
# You can generate a secure key with the following command in your terminal:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=

# The network port on which the server will run.
PORT=3000

# Set the application's environment.
NODE_ENV=development
